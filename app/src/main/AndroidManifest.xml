<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- PMV vi) GPS: Permiso para obtener ubicaci칩n fina (necesario para el Bot칩n de P치nico). -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <!-- PMV vii) WEB SERVICES: Permiso de red para Retrofit y Firebase. -->
    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:name=".EduBridgeApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EduBridge"
        android:networkSecurityConfig="@xml/network_security_config">

        <!-- PMV v) MAPAS: Clave de Google Maps (requerida para el AlertMapScreen). -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyD3JsQcjQuTlzkJiCSH1mVsNRhGQOQa-vk" />

        <!-- PMV iii) FILESTREAM: Configuraci칩n de seguridad para archivos locales. -->
        <!-- Permite que otras apps (visores de PDF) abran archivos de la Biblioteca de forma segura. -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.EduBridge">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>